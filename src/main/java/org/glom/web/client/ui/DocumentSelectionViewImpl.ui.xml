<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

		.title {
		font-size: 2em;
		font-weight: bold;
		color: #777777;
		margin: 40px 0px 20px;
		text-align: center;
		}

		.links {
		font-size: 2em;
		font-weight: bold;
		color: #777777;
		}

		.info {
		font-size: 1em;
		font-weight: bold;
		color: #777777;
		margin: 20px 0px 40px;
		}

	</ui:style>

	<g:HTMLPanel>

		<div class="{style.title}">
			<img style="vertical-align:middle;" src="glom.png" />
			Online Glom
		</div>

		<div>
			<g:VerticalPanel addStyleNames="{style.links}" ui:field="documentLinks" verticalAlignment="ALIGN_MIDDLE" spacing="10" />
		</div>

		<div class="{style.info}">
			You can build and run Online Glom by following
			<a href="http://www.glom.org/wiki/index.php?title=Development/OnlineGlom">these instructions</a>
			.
		</div>

	</g:HTMLPanel>
</ui:UiBinder>