<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

		.title {
		font-size: 2em;
		font-weight: bold;
		color: #777777;
		margin: 0 0 1em 0;
		text-align: left;
		}

		.info {
		font-size: x-small;
		font-weight: bold;
		color: #525252;
		margin: 3em 0 0 0;
		}

	</ui:style>

	<g:HTMLPanel ui:field="userRegisterPanel">

		<div class="{style.title}">
			<img style="vertical-align:middle;" src="glom.png" />
			Online Glom
		</div>

		<div>
			<g:VerticalPanel ui:field="userRegisterFields" verticalAlignment="ALIGN_MIDDLE" spacing="10" />
		</div>

		<div class="{style.info}">
			Instructions for building Online Glom can be found on the
			<a href="http://www.glom.org/wiki/index.php?title=Development/OnlineGlom">Glom wiki</a>.</div>

	</g:HTMLPanel>
</ui:UiBinder>
